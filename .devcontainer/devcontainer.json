{
    "name": "Python Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            },
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "root",
    "workspaceFolder": "/workspace"
}